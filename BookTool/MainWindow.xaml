<Window x:Class="BookTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized" FontFamily="Consolas" FontSize="18">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <DockPanel Margin="4">
                    <Button x:Name="mOpenEN" Content="EN Repository" Click="OnOpenClicked" FontSize="12"/>
                    <Label x:Name="mSelectedRep" Width="150" FontSize="12"/>
                </DockPanel>
                <DockPanel Margin="4">
                    <Button x:Name="mOpenTarget" Content="Target Repository" Click="OnOpenClicked" FontSize="12"/>
                    <Label x:Name="mTargetRep" Width="150" FontSize="12"/>
                </DockPanel>
            </StackPanel>
            <Button x:Name="mBtnApply" Content="Apply Patch" Height="25" Margin="4" Click="OnClickApply" FontSize="12"/>
        </StackPanel>
        <Border Grid.RowSpan="2" BorderBrush="LightGray" BorderThickness="1">
            <ScrollViewer Name="mTreeScroll" PreviewMouseWheel="OnMouseWheel" Background="LightGray" HorizontalScrollBarVisibility="Visible" CanContentScroll="True">
                <StackPanel Orientation="Vertical" Margin="4" Width="200">
                    <TreeView x:Name="mCommitTree" SelectedItemChanged="OnSelectionChanged" BorderBrush="Black" BorderThickness="2" Background="LightGray" Height="300"
                              VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" FontSize="14" Margin="0,4,0,4"/>
                    <TreeView x:Name="mFileTree" SelectedItemChanged="OnSelectionChanged" BorderBrush="Black" BorderThickness="2" Background="LightGray"
                              VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" FontSize="14" Height="300" Margin="0,4,0,4"/>
                    <!-- Setting VirtualizingPanel properties to help improve TreeView performance
                    See https://learn.microsoft.com/en-us/dotnet/desktop/wpf/controls/how-to-improve-the-performance-of-a-treeview?view=netframeworkdesktop-4.8-->
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Grid x:Name="mGrid" Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <FlowDocumentScrollViewer Name="mENDocScroll" Margin="4" HorizontalScrollBarVisibility="Hidden" BorderBrush="LightGray" BorderThickness="1">
                <FlowDocument Name="mENDoc" PagePadding="20"/>
            </FlowDocumentScrollViewer>
            <FlowDocumentScrollViewer Name="mLangDocScroll" Grid.Column="1" Margin="4" HorizontalScrollBarVisibility="Hidden" BorderBrush="LightGray" BorderThickness="1">
                <FlowDocument Name="mLangDoc" PagePadding="20"/>
            </FlowDocumentScrollViewer>
        </Grid>
    </Grid>
</Window>
