<Window x:Class="BookTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized" FontFamily="Consolas" FontSize="12">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" MinWidth="300" Height="55">
                <StackPanel Margin="4,2,0,2" Orientation="Horizontal">
                    <Button x:Name="mOpenEN" Content="EN Repository" Click="OnOpenClicked" Height="25"/>
                    <Label x:Name="mSelectedRep"/>
                </StackPanel>
                <StackPanel Margin="4,0,0,2" Orientation="Horizontal">
                    <Button x:Name="mOpenTarget" Content="Target Repository" Click="OnOpenClicked" Height="25"/>
                    <Label x:Name="mTargetRep"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="mBtnExport" Content="Export Patch" Height="25" Margin="4" Click="OnClickExport"/>
                <Button x:Name="mBtnApply" Content="Apply Patch" Height="25" Margin="4" Click="OnClickApply" IsEnabled="{Binding Path=Patch.Check}"/>
            </StackPanel>
        </Grid>
        <Border Grid.RowSpan="2" Background="LightGray" Width="300">
            <StackPanel Orientation="Vertical" Margin="8">
                <Label Content="Recent Commits:" FontSize="14" Margin="0,4,0,0"/>
                <ScrollViewer Name="mTreeScroll">
                    <TreeView x:Name="mCommitTree" SelectedItemChanged="OnSelectionChanged" BorderBrush="Gray" Background="Transparent" Height="300"
                              VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" FontSize="14"/>
                </ScrollViewer>
                <Label Content="Changed Files:" FontSize="14" Margin="0,4,0,0"/>
                <ScrollViewer Name="mTreeScroll2">
                    <TreeView x:Name="mFileTree" SelectedItemChanged="OnSelectionChanged" BorderBrush="Transparent" BorderThickness="1" Background="Transparent" MinHeight="250" MaxHeight="400"
                              VirtualizingStackPanel.IsVirtualizing="True" VirtualizingStackPanel.VirtualizationMode="Recycling" FontSize="14"/>
                </ScrollViewer>
                <!-- Setting VirtualizingPanel properties to help improve TreeView performance
                    See https://learn.microsoft.com/en-us/dotnet/desktop/wpf/controls/how-to-improve-the-performance-of-a-treeview?view=netframeworkdesktop-4.8-->
            </StackPanel>
        </Border>
        <Grid x:Name="mGrid" Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <FlowDocumentScrollViewer Name="mENDocScroll" Margin="4" HorizontalScrollBarVisibility="Hidden" BorderBrush="LightGray" BorderThickness="1">
                <FlowDocument Name="mENDoc" PagePadding="20"/>
            </FlowDocumentScrollViewer>
            <FlowDocumentScrollViewer Name="mLangDocScroll" Grid.Column="1" Margin="4" HorizontalScrollBarVisibility="Hidden" BorderBrush="LightGray" BorderThickness="1">
                <FlowDocument Name="mLangDoc" PagePadding="20"/>
            </FlowDocumentScrollViewer>
        </Grid>
    </Grid>
</Window>
